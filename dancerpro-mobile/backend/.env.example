NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001
JWT_SECRET=replace_with_strong_secret

# Twilio credentials (choose ONE auth method)
# Option A: Account SID + Auth Token
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=replace_with_auth_token

# Option B: API Key (recommended) + Account SID
TWILIO_API_KEY_SID=SKXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_API_KEY_SECRET=replace_with_api_key_secret

# Twilio phone number to send from (E.164 format)
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# Set to 'false' to enable real sends in development when credentials are present
TWILIO_MOCK=true
